#include <iostream>
using namespace std;

class Tablero{
private:
    int filas;
    int columnas;
    string **tablero;

    void imprimirLinea(){
      for (int j = 0 ; j < this->columnas ; j++){
        cout << "--" ;
      }
      cout << "-" << endl;
    }

    void imprimirRaya(){
      for (int i = 0 ; i < this->filas ; i++){
        cout << "|";
        for (int j = 0 ; j < this->columnas ; j++){
          cout << tablero[i][j] << "|";
        }
        cout << endl;
        this->imprimirLinea();
      }
    }


  public:
    Tablero(){
      this->filas = 8;
      this->columnas = 8;
      tablero = new string*[filas];


      for (int i = 0 ; i < filas ; i++){
        tablero[i] = new string[columnas];
      }

      rellenarTablero("A");
    }

    void rellenarTablero(string relleno){
      for (int i = 0 ; i < this->filas ; i++){
        for (int j = 0 ; j < this->columnas ; j++){
          tablero[i][j] = relleno;
        }
      }
    }

    /*void introValor(string valor){
      for (int i = 0 ; i < this->filas ; i++){
        for (int j = 0 ; j < this->columnas ; j++){
          cout << "Introduce un valor: ["<<i<<"]["<<j<<"]";
          cin >> valor;
        }
      }  
    }*/



    void imprimir(){
      this->imprimirLinea();
      this->imprimirRaya();
    };

};

int main(){
  Tablero tablero;
  tablero.imprimir();
  cout << "==============================================" << endl;
  tablero.rellenarTablero("0");
  tablero.imprimir();
  cout << "==============================================" << endl;
  /*tablero.introValor();
  tablero.imprimir();*/



  return 0;
}
